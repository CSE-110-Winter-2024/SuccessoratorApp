<!-- res/drawable/button_border.xml
This XML is what add the black border lines inside the goal list
Reason: Helps the user visually separate each goal
-->

<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- Transparent background -->
    <solid android:color="@android:color/transparent" />

    <!-- Border properties -->
    <stroke
        android:width="2dp"
        android:color="#FF000000" /> <!-- You can change the color and width as needed -->

    <!-- Optional: Rounded corners -->
    <corners android:radius="4dp" />
</shape>